<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cs400.gamifyhealth.SettingsFragment">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/relativeLayout" >

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable Safe Mode"
            android:paddingLeft="5dp"
            android:id="@+id/safe_switch"
            android:layout_toEndOf="@+id/description1_textView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="39dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description 1"
            android:textSize="15dp"
            android:id="@+id/description1_textView"
            android:paddingLeft="10dp"
            android:layout_below="@+id/safe_switch"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset All Data"
            android:id="@+id/reset_button"
            android:layout_marginTop="46dp"
            android:layout_below="@+id/description1_textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:id="@+id/testbutton"
            android:layout_toEndOf="@+id/reset_button"
            android:layout_centerVertical="true"
            android:layout_below="@id/reset_description"
            android:layout_toRightOf="@+id/reset_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description 2"
            android:textSize="15dp"
            android:id="@+id/reset_description"
            android:paddingLeft="10dp"
            android:layout_below="@+id/reset_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</FrameLayout>
