<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cs400.gamifyhealth.GameFragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="90">

            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:columnCount="10"
                android:rowCount="13"
                android:id="@+id/map"
                android:background="@drawable/map"
                android:orientation="vertical">



            </GridLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal|right"
                android:padding="12dp"
                android:background="#AA000000"
                android:textColor="#ffffffff"
                android:text="People Counter"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:id="@+id/people_counter"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:padding="12dp"
                android:background="#AA000000"
                android:textColor="#ffffffff"
                android:text="Coin Counter"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/credit_counter"/>
        </FrameLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#ffaaaaaa"
            android:layout_weight="10"
            android:id="@+id/relative_layout">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wheat_button"
                android:background="@drawable/wheat_button"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cottage_button"
                android:id="@+id/cottage_button"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sword_button"

                android:id="@+id/sword_button"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="2dp" />
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>
